<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskGeolocalisationActivity"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical">

  <TextView
      android:id="@+id/tv_message_geolocalisation"
      android:layout_marginTop="80dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:textColor="@color/white"
      android:gravity="center"
      />

  <TextView
      android:layout_marginTop="80dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Veuillez cliquer sur le bouton ci-dessous pour l'activer."
      android:textSize="18sp"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:textColor="@color/white"
      android:gravity="center"
      />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <Button
        android:id="@+id/ask_geolocalisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:background="@color/orange_200"
        android:textColor="@color/white"
        android:text="@string/demande_geolocalisation" />

  </RelativeLayout>

  </LinearLayout>